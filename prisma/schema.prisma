generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  VENDOR
  ADMIN
}

enum VendorStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  phone     String?        @unique
  password  String
  role      Role           @default(CLIENT)
  createdAt DateTime       @default(now())
  vendor    VendorProfile?
  otpCodes  OtpCode[] // Ajouté: relation avec OtpCode
}

model VendorProfile {
  id         Int           @id @default(autoincrement())
  user       User          @relation(fields: [userId], references: [id])
  userId     Int           @unique
  codeUnique String?       @unique
  status     VendorStatus  @default(PENDING)
  kycDocs    KycDocument[]
  createdAt  DateTime      @default(now())
  products   Product[] // Ajouté: relation avec Product
}

model OtpCode {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
}

model KycDocument {
  id              Int           @id @default(autoincrement())
  vendorProfile   VendorProfile @relation(fields: [vendorProfileId], references: [id])
  vendorProfileId Int
  type            String
  url             String
  status          String        @default("PENDING")
  uploadedAt      DateTime      @default(now())
}

model Product {
  id          Int            @id @default(autoincrement())
  vendor      VendorProfile? @relation(fields: [vendorId], references: [id])
  vendorId    Int?
  title       String
  description String?
  createdAt   DateTime       @default(now())
}
